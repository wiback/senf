# -*- python -*-

Import('env')
import SENFSCons, glob, os.path

###########################################################################

sources, includes = SENFSCons.Glob(env, subdirs=[ 'impl' ])

SENFSCons.Lib(env, sources)
SENFSCons.Doxygen(env)
SENFSCons.InstallIncludeFiles(env, includes)

SConscript(glob.glob("*/SConscript"))

/** \file
    \brief StatisticAccumulator inline non-template implementation */

// Custom includes

#define prefix_ inline
//-/////////////////////////////////////////////////////////////////////////////////////////////////

//-/////////////////////////////////////////////////////////////////////////////////////////////////
// senf::StatisticsData

prefix_ senf::StatisticsData::StatisticsData()
    : min(0.0f), avg(0.0f), max(0.0f), stddev(0.0f), count(0)
{}

prefix_ senf::StatisticsData::StatisticsData(float min_, float avg_, float max_, float stddev_, boost::uint32_t count_)
    : min(min_), avg(avg_), max(max_), stddev(stddev_), count(count_)
{}

prefix_ senf::StatisticsData::StatisticsData(float singleValue)
    : min(singleValue), avg(singleValue), max(singleValue), stddev(0.0f), count(1)
{}

prefix_ void senf::StatisticsData::clear()
{
    min = avg = max = stddev = 0.0f;
    count = 0;
}

prefix_ bool senf::StatisticsData::valid()
    const
{
    return count > 0;
}


//-/////////////////////////////////////////////////////////////////////////////////////////////////
#undef prefix_


